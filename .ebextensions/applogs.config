commands:
	01_create_dir:
		command: mkdir -p /var/logs/app-logs
	02_change_permissions:
		command: chmod g+s /var/logs/app-logs
	03_change_owner:
		command: chown wsgi:wsgi /var/logs/app-logs

files:
	"/opt/elasticbeanstalk/tasks/taillogs.d/django.conf":
		mode: "000755"
		owner: root
		group: root
		content: |
    		/var/log/app-logs/django.log