container_commands:
    01_change_directory:
        command: "sudo cd /usr/local/bin"
    02_make_directory:
        command: "sudo mkdir ffmpeg"
    03_change_to_new_dir:
        command: "sudo cd ffmpeg"
    04_download_ffmpeg:
        command: "sudo wget https://johnvansickle.com/ffmpeg/releases/ffmpeg-release-amd64-static.tar.xz"
    05_untar:
        command: "sudo tar -xzf ffmpeg-release-amd64-static.tar.xz"
    06_run_and_check_version:
        command: "sudo ./ffmpeg -version"
    07_create_symlink:
        command: "sudo ln -s /usr/local/bin/ffmpeg/ffmpeg /usr/bin/ffmpeg"